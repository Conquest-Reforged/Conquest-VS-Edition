[
    {
        "dependsOn": [
            {
                "modid": "bricklayers",
                "invert": true
            }
        ],
        "op": "remove",
        "path": "/textures",
        "file": "game:blocktypes/stone/stonebrick/stonebricks.json",
        "side": "server"

    },
    {
        "op": "addmerge",
        "path": "/texturesByType",
        "value": {
            "@.*-(chalk|limestone|phyllite|peridotite|slate|shale)": {
                "all": { "base": "game:block/stone/brick/{rock}/*" }
            },
            "*-granite": {
                "all": {
                    "base": "game:block/stone/brick/{rock}/1",
                    "tiles": [
                        { "base": "game:block/stone/brick/{rock}/*" }
                    ],
                    "tilesWidth": 3
                }
            },
            "@.*-(andesite|basalt|bauxite|chert|conglomerate|sandstone|claystone)": {
                "all": {
                    "base": "game:block/stone/brick/{rock}/1",
                    "tiles": [
                        { "base": "game:block/stone/brick/{rock}/*" }
                    ],
                    "tilesWidth": 4
                }
            }
        },
        "file": "game:blocktypes/stone/stonebrick/stonebricks.json",
        "side": "server"
    },
    {
        "op": "addmerge",
        "path": "/texturesByType",
        "value": {
            "*": {
                "all": { "base": "game:block/stone/brick/{rock}*" }
            }
        },
        "file": "game:blocktypes/stone/stonebrick/stonebricks.json",
        "side": "server"
    }
]

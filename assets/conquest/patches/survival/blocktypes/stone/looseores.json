[
	{
		"file": "game:blocktypes/stone/looseores.json",
		"op": "remove",
		"side": "server",
		"path": "/textures"
	},
	{
		"file": "game:blocktypes/stone/looseores.json",
		"op": "add",
		"side": "server",
		"path": "/texturesByType",
		"value": {
			"@.*-(andesite|basalt|chalk|claystone|kimberlite|obsidian|peridotite|phyllite|slate|greenmarble|redmarble|whitemarble|halite)-.*": {
				"rock": {
					"base": "game:block/stone/rock/{rock}/1",
					"overlays": [ "game:block/stone/ore/{ore}1" ]
				}
			},
			"@.*-(bauxite|chert|conglomerate|granite|limestone|sandstone|shale)-.*": {
				"rock": {
					"base": "game:block/stone/rock/{rock}/sides/1",
					"overlays": [ "game:block/stone/ore/{ore}1" ]
				}
			},
			"*": {
				"rock": { "base": "game:block/stone/rock/{rock}/*" },
				"overlays": [ "game:block/stone/ore/{ore}1" ]
			}
		}
	}
]

